<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.QuestionFragment">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_timerbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_grey"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/tv_attempted_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noofattemptedquestions"
                android:layout_alignParentLeft="true"
                android:paddingTop="@dimen/d5"
                android:paddingBottom="@dimen/d5"
                android:paddingLeft="@dimen/d5"
                android:padding="@dimen/d5"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/noofattemptedquestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_attempted_questions"
                android:text="1"
                android:paddingTop="@dimen/d5"
                android:paddingBottom="@dimen/d5"
                android:paddingRight="@dimen/d5"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummytext"
                android:layout_toRightOf="@id/noofattemptedquestions"
                android:layout_marginLeft="@dimen/d10"
                android:padding="@dimen/d5"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/menu_dots"
                android:layout_toRightOf="@id/tv_timer"
                android:paddingTop="@dimen/d5"
                android:layout_marginLeft="@dimen/d15"/>

        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvQuestionList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_timerbar"
            android:background="@color/black"
            android:paddingTop="@dimen/d3"
            android:paddingBottom="@dimen/d3"
            android:paddingLeft="@dimen/d10"

            />
        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvQuestionList">
            <RelativeLayout
                android:id="@+id/rlquestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="@dimen/d6"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="@dimen/d10">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/d5"
                        >
                        <ImageView
                            android:id="@+id/ivQuestion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:src="@drawable/dummyquestion"
                            android:visibility="gone"
                            android:layout_below="@+id/tvQuestionMarks"
                            />
                        <TextView
                            android:id="@+id/tvQuestionText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/questiondummytext"
                            android:textSize="@dimen/s18"
                            android:paddingLeft="@dimen/d5"
                            android:layout_below="@+id/ivQuestion"
                            ></TextView>
                        <TextView
                            android:id="@+id/tvQuestionMarks"
                            android:layout_width="@dimen/d25"
                            android:layout_height="@dimen/d25"
                            android:text="1"
                            android:background="@drawable/textviewcircularbackground"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:padding="@dimen/d3"/>

                        <TextView
                            android:id="@+id/tvQuestype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Single Choice"
                            />
                        <Button
                            android:id="@+id/btn_mark_for_review"
                            android:layout_width="@dimen/d19"
                            android:layout_height="@dimen/d19"
                            android:layout_gravity="bottom|end"
                            android:layout_marginTop="@dimen/d3"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignBaseline="@+id/tvQuestionMarks"
                            android:src="@android:drawable/ic_dialog_email" />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/optionList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/cvQuestion"
                    android:layout_alignParentBottom="true"

                    />
            </RelativeLayout>
        </ViewFlipper>
    </RelativeLayout>
</FrameLayout>
