<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardCornerRadius="@dimen/d6"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/d5"
    >
<RelativeLayout
    android:id="@+id/rlOption"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/d5"
    >
    <ImageView
    android:id="@+id/ivOption"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/dummyquestion"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
  <TextView
      android:id="@+id/tvOptionText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/ivOption"
      android:layout_toRightOf="@+id/tvOptionNum"
      android:text="@string/questiondummytext"
      android:paddingLeft="@dimen/d3"
      />
    <CheckBox
        android:id="@+id/chOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvOptionText"
        android:checked="false" />
    <TextView
        android:id="@+id/tvOptionNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="A"
        android:layout_marginRight="@dimen/d6"
        android:layout_marginLeft="@dimen/d3"
        />


</RelativeLayout>
</android.support.v7.widget.CardView>