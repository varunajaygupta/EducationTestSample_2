<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
        <TextView
            android:id="@+id/tv_test_title_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummytext"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/d10"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/dummytext"
            android:layout_marginTop="@dimen/d10"
            android:layout_marginBottom="@dimen/d1"
            android:layout_marginRight="@dimen/d4"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/tv_marks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_duration"
            android:text="@string/dummytext"
            android:layout_marginBottom="@dimen/d1"
            android:layout_marginRight="@dimen/d4"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/tv_test_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_test_title_secondary"
            android:layout_centerHorizontal="true"
            android:text="@string/dummytext"
            android:textSize="@dimen/s10"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/tv_test_open_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_marks"
            android:text="12/May/1991 - 13/Jun/1993"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/d4"
            android:textColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/startTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startTest"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_test_open_window"
            android:layout_margin="@dimen/d10"
            android:padding="@dimen/d4"
            android:background="@color/colorAccent" />

    </RelativeLayout>